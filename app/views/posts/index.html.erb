<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="posts">



        <% @posts.each do |post| %>
        <div class="post clearfix">
         <div class="post-details">

            <iframe src="<%= post.url %>" width="100%" height="250"></iframe>
            <div class="panel panel-default">
              <div class="panel-heading post-title"><strong><%= link_to post.name.upcase , post %></strong>
              <br><p> Creado el <%= post.created_at %> por: <%= post.user %></p>
              </div>
              <div class="panel-body post-description"><%= post.description.first(250) %></div>
            </div>
            <div class="post-comments">
              <% if post.voted_by? current_user %>
              <%= link_to post_vote_path(post), method: :delete, class: "post-upvote upvote-active" do %>
             <span class="upvote-arrow"></span>
             <span class="upvote-count"><%= post.votes.count %></span>
              <% end %>
              <% else %>
              <%= link_to post_vote_path(post), method: :post, class: "post-upvote" do %>
             <span class="upvote-arrow"></span>
             <span class="upvote-count"><%= post.votes.count %></span>
             <% end %>
             <% end %>

              <span class="glyphicon glyphicon-comment"></span>
              <span class="comment-count"><%= post.comments.count %></span>
            </div>
          </div>
      </div>
     <% end %>










     <div class="text-right">
       <%= link_to "Publicar #Freshtrack", new_post_path, class: "btn btn-primary" %>
     </div>
   </div>
  </div>

</div>
