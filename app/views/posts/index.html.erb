<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
     <h1 style="text-align: center"><strong>#Freshtracks</strong></h1>
      <div class="posts">

       <% @posts.each do |post| %>
       <div class="post clearfix">

         <iframe src="<%= post.url %>" width="100%" height="325"></iframe>
         <div class="post-details">

         <div class="panel panel-default">
         <div class="panel-heading post-title"><%=link_to post.name, post %></div>
         <div class="panel-body post-description"><%= post.description %></div>

       </div>
       </div>
     </div>
    <% end %>
     <div class="text-right">
       <%= link_to "Publicar #Freshtrack", new_post_path, class: "btn btn-primary" %>
     </div>
   </div>
   </div>

</div>
