<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
     <h1 style="text-align: center"><strong>#Freshtracks</strong></h1>

      <% @posts.each do |p| %>
     <iframe src="<%= p.url %>" width="100%" height="325"></iframe>
     <div class="panel panel-default">
       <div class="panel-heading text-center"><%=link_to p.name, p %></div>
       <div class="panel-body text-center"><%= p.description %></div>

     </div>
      <% end %>
     <div class="text-right">
       <%= link_to "Publicar #Freshtrack", new_post_path, class: "btn btn-primary" %>
     </div>
   </div>

</div>
