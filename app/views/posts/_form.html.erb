<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1><%= form_title %></h1>

      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <ul>
           <% @post.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
            <% end %>
         </ul>
       </div>
      <% end %>

      <%= form_for @post do |f| %>
       <div class="form-group">
         <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre de tu post" %>
       </div>
       <div class="form-group">
         <%= f.text_field :url, class: "form-control input-lg", placeholder: "Pega la url de tu post" %>
       </div>
       <div class="form-group">
         <%= f.text_area :description, class: "form-control input-lg", placeholder: "Ingresa la descripciÃ³n de tu post" %>
       </div>
       <div>
         <%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
       </div>
      <% end %>
    </div>

  </div>

</div>
