<div class="post-page">
  <div class="row post-header">
    <div class="col-sm-10 col-sm-offset-1">
      <iframe src="<%= @post.url %>" width="100%" height="350"></iframe>
      <div class="panel panel-primary">
        <div class="panel-heading post-name"><%= @post.name %></div>
        <div class="panel-body post-description"><%= @post.description %></div>
      </div>

      <div class="text-left">
         <%= link_to 'Editar', edit_post_path(@post), class: "btn btn-primary" %>
         <%= link_to 'Eliminar', @post, method: :delete, data: { confirm: "Seguro deseas eliminar este post?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>  <!-- post-page -->

<div class="container vote-com">
   <div class="row">
     <div class="col-sm-10 col-sm-offset-1">
       <div class="votes">
         <h2>Votos</h2>
       </div>

       <div class="comments">
         <h2>Comentarios</h2>
       </div>
     </div>
   </div>
 </div>
</div>
