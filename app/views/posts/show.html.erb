<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <iframe src="<%= @post.url %>" width="100%" height="500"></iframe>
      <div class="panel panel-primary">
        <div class="panel-heading text-center"><%= @post.name %></div>
        <div class="panel-body text-center"><%= @post.description %></div>
      </div>
      <div class="text-left">
         <%= link_to 'Editar', edit_post_path(@post), class: "btn btn-primary" %>
         <%= link_to 'Eliminar', @post, method: :delete, data: { confirm: "Seguro deseas eliminar este post?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
